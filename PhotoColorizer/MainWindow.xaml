<Window x:Class="PhotoColorizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoColorizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="TempButton" HorizontalAlignment="Left" Margin="685,370,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Open File" HorizontalAlignment="Left" Margin="100,100,0,0" VerticalAlignment="Top" Width="75" Click="OpenFileBtn"/>
        <TextBlock HorizontalAlignment="Left" Height="51" Margin="196,100,0,0" TextWrapping="Wrap" Text="No file selected" VerticalAlignment="Top" Width="526"
                   x:Name="SelectedFile"/>
        <Button Content="Colorize" x:Name ="colorize" HorizontalAlignment="Left" Margin="238,212,0,0" VerticalAlignment="Top" Width="75" Click="Colorize_Click"/>

    </Grid>
</Window>
